<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bookmark_border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/bookmark_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookmark_img"
            />

        <LinearLayout
            android:id="@id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/bookmark_img"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_course_name"
                android:fontFamily="@font/circularstd_bold"
                android:textSize="16dp"
                android:textColor="@color/dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_title"
                android:fontFamily="@font/muli"
                android:textSize="12dp"/>

        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />



            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>