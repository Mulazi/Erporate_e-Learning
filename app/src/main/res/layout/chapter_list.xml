<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar1">
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bakground1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btnback_white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_course_name"
            android:layout_below="@+id/btn_back"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@id/tv_course_name">

            <RatingBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_course_name"
                android:layout_marginLeft="20dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="4"
                android:stepSize="1"/>



            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_rate"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/circularstd_book"
                android:layout_marginLeft="15dp"
                android:textColor="#B3FFFF"/>

            <TextView
                android:id="@+id/tv_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reviews"
                android:fontFamily="@font/circularstd_book"
                android:textColor="#B3FFFF"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circularstd_book"
                android:text="@string/title_reviews"
                android:layout_marginLeft="5dp"
                android:textColor="#B3FFFF"/>


        </LinearLayout>

        <TextView
            android:id="@+id/title_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2"
            android:text="@string/title_mentor"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/circularstd_medium"
            android:textColor="#B3FFFF"
            android:textSize="16dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_mentor"
            android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user_1"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="15dp"
            />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_mentor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_mentor_name"
                    android:textColor="@color/white"
                    android:fontFamily="@font/circularstd_book"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/expertise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_expertise"
                    android:layout_below="@id/tv_mentor_name"
                    android:fontFamily="@font/muli"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#B3FFFF"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>







</RelativeLayout>