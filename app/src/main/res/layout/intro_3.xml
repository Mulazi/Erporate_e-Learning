<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/image_intro1"
        android:layout_width="221dp"
        android:layout_height="150dp"
        android:src="@drawable/intro_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>

    <ImageView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/titik_1"
        android:layout_below="@id/image_intro1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/intro1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/point"
        android:text="@string/title_intro3"
        android:fontFamily="@font/circularstd_bold"
        android:textColor="@color/dark"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/intro1_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="3"
        android:text="@string/intro3_desc"
        android:layout_below="@id/intro1_title"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/muli"
        android:textSize="12dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro1_desc"
        android:layout_marginTop="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_skip"
            android:fontFamily="@font/circularstd_bold"
            android:textSize="14dp"
            android:textColor="@color/dark"
            android:layout_marginLeft="70dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_173"
            android:layout_marginLeft="160dp"
            android:text="@string/tv_skip"
            android:textColor="@color/white"/>

    </LinearLayout>



</RelativeLayout>