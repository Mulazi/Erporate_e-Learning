<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/top_cat"
        android:layout_width="136dp"
            android:layout_height="146dp"
        android:layout_marginRight="20dp"
        >

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_cat_border"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lin_img"
                android:layout_width="match_parent"
                android:layout_height="73dp"

                >

                <ImageView
                    android:id="@+id/top_categories_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/settings_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    >
                </ImageView>
            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/lin_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_cat_border2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/top_categories_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/categories_title"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/circularstd_bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/top_categories_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/total_course"
                        android:lines="1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/muli"
                        android:textSize="14dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/course"
                        android:textColor="@color/white"
                        android:fontFamily="@font/muli"
                        android:textSize="12dp"/>

                </LinearLayout>




            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>