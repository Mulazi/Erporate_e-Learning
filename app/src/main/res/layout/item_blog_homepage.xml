<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/blog_homepage"
        android:layout_width="240dp"
        android:layout_height="253sp"
        android:layout_marginRight="20dp"
        >

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blog_border"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                >

                <ImageView
                    android:id="@+id/blog_image_hp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mask_group"
                    >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/lin_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backgroud_blog"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/blog_title_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Programming Lv. 1"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/circularstd_bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/blog_desc_hp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Make cafein to become a great program"
                    android:lines="2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/muli"
                    android:textSize="14dp"

                    />


            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
