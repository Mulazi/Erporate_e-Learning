<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/back_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnback"
                android:layout_marginLeft="35dp"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_txt"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/circularstd_bold"
                android:textColor="@color/dark"
                android:textSize="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@id/rel2"
            android:layout_below="@id/back_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/account_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_txt"
                android:fontFamily="@font/circularstd_bold"
                android:textSize="16dp"
                android:textColor="@color/dark"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"/>

            <LinearLayout
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/account_txt"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_info_black_24"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/information_txt"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/muli"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cpass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/information"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_lock_black_24"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password_txt"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/muli"
                    android:textSize="15dp" />


            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/cpass"
                android:layout_marginTop="10dp"
                android:background="@color/dark"/>

        </RelativeLayout>

            <RelativeLayout
                android:id="@id/rel3"
                android:layout_below="@id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/support_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/support_txt"
                    android:fontFamily="@font/circularstd_bold"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/support_txt"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_help_black_24"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/help_txt"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/muli"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/help"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_feedback_black_24"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_txt"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/muli"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/term"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/feedback"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_info_black_24"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/term_txt"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/muli"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/term"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_policy_black_24"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy_txt"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/muli"
                        android:textSize="15dp" />


                </LinearLayout>




            </RelativeLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_logout_border"
                android:text="@string/logout_txt"
                android:textColor="@color/red"
                android:layout_marginTop="20dp"
                android:layout_below="@id/rel3"
                android:layout_centerHorizontal="true"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_logout"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textSize="12dp"/>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>